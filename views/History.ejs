<!DOCTYPE html>
<html>
<head>
    <title>My History</title>
    <style>
        img {
            width: 10%;
            margin-left: 45%;
            margin-bottom: -2%;
        }
        #logo2 {
            margin-left: 45.5%;
            margin-top: -1%;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin: 20px 0;
        }
        th, td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #ddd;
            font-family: 'Arial', sans-serif;
        }
        th {
            background-color: #333;
            color: white;
        }
        td {
            background-color: #f9f9f9;
        }
        tr:hover td {
            background-color: #f1f1f1;
        }
        h1 {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            text-align: center;
            margin-top: 20px;
        }
        .add-button {
            background-color: #01F9C6;
            border: none;
            color: white;
            padding: 10px 20px;
            cursor: pointer;
            border-radius: 5px;
            text-decoration: none;
            display: block;
            width: 100px;
            margin: 20px auto;
            text-align: center;
        }
        .add-button:hover, .add-button:focus {
            background-color: #B6B6B4;
            border-color: #B6B6B4;
        }
        .action {
            cursor: pointer;
        }
        #si {
            background-color: white;
            margin-top: 2%;
            float: left;
            width: 1.55%;
            padding: 10px;
            border: 1px solid grey;
            border-left: none;
            width: 1.5%;
            margin-left: 0%;
            cursor: pointer;
        }
        #s {
            padding: 10px;
            font-size: 17px;
            border: 1px solid grey;
            float: left;
            width: 50%;
            background: white;
            margin-left: 25%;
            margin-top: 2%;
        }
        #m{
            text-align: center;
        }
        #de {
            margin-bottom: 10px;
        }
        .he {
            display: flex; 
            flex-direction: column;
        }
        #nouser {
            display: none;
            text-align: center;
            font-family: 'Arial', sans-serif;
        }
    </style>
</head>
<body>
    <div class="gen">
        <div class="left">
            <img src="/images/logo.jpg" alt="Shop logo" id="im">
            <h1 id="logo">MINIM</h1>
            <p id="logo2">Electronic Devices</p>
        </div>
        <div class="right">
            <h1 id="re">My History</h1>
            <div class="he">
                <div id="de">
                    <input type="search" id="s" placeholder="Search..." oninput="saveChanges()">
                    <img id="si" src="/images/icons8-search-50.png" alt="Search icon." onclick="searchUsers()">
                </div>
            </div>
            <div id="orderHistory">
                <% if (orders.length > 0) { %>
                    <table>
                        <thead>
                            <tr>
                                <th>Order ID</th>
                                <th>Order Date</th>
                                <th>Total Price</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody id="tableBody">
                            <% let i = 0; %>
                            <% orders.forEach(order => { %>
                                <% i++; %>
                                <% if (order) { %>
                                    <tr>
                                        <td><%= i %></td>
                                        <td><%= new Date(order.orderDate).toLocaleString() %></td>
                                        <td><%= order.totalPrice %> EGP</td>
                                        <td> <a href="/user/OrderDetails/<%=order._id %>">View Details</a></td>
                                    </tr>
                                <% } %>
                            <% }); %>
                        </tbody>
                    </table>
                <% } else { %>
                    <p id="m">No orders found.</p>
                    <style>
                        #s,#si {
                            display: none;
                        }
                    </style>
                <% } %>
            </div>
        </div>
    </div>
</body>
</html>
